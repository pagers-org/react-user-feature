{
  "extends": "config-tsconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": ["@types"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  // Files and folders starting with a . are ignored by the glob patterns
  "include": [".", "next-env.d.ts", ".eslintrc.js", ".storybook/**/*", "../../packages/config-mui/mui-theme.d.ts"],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo",
    "coverage",
    "dist",
    "compiled",
    "build-next-static",
    "build-storybook-static"
  ]
}
